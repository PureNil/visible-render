{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "../..",
        "baseUrl": "../..",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "*.ts",
        "../src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
} 